    function DashboardEmployeeInList() {

        var d = new Date();
        var month = d.getMonth() + 1;
        var day = d.getDate();
        var output = d.getFullYear() + '-' + (month < 10 ? '0' : '') + month + '-' + (day < 10 ? '0' : '') + day;
        console.log(output);
        var AttendenceDate = output;
        var html = "";
        $.ajax({
            type: "GET",
            url: '@Url.Action("ShowEmployeeInList", "Dashboard")',
            data: { AttendenceDate: AttendenceDate },
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                if (data != null) {

                    jQuery("#divEmpList").html('');

                    for (var k = 0; k < data.length; k++) {
                        html += "<ul class='products-list product-list-in-card pl-2 pr-2'>"
                        html +="<li class='item'>";
                        html +="<div class='product-img'>";
                        html += "<img id='empImg' src='" + "/GCTLATD"+data[k]["PhotoUrl"]+"'class='img-size-50 img-circle'>";
                        html +="</div>";
                        html +="<div class='product-info'>";
                        html +="<a href='javascript:void(0)' class='product-title'>";
                        html += data[k]["EmployeeName"];
                        html +="<span class='badge badge-warning float-right'>";
                        html += data[k]["InTime"];
                        html +="</span>";
                        html +="</a>";
                        html +="<span class='product-description'>";
                        html += data[k]["DesignationCode"];
                        html +="</span>";
                        html +="</div>";
                        html += "</li>";
                        html += "</ul>";
                        }
                    $("#divEmpList").append(html);

                }
            },
            error: function (response) {
                var message = $("#message");
                message.css("color", "red");
                message.html("error");
            }
        });
    }
    function DashboardDailyEmpStatus() {

       var d = new Date();
       var month = d.getMonth() + 1;
        var day = d.getDate();
        var output =d.getFullYear()+ '/' + (month < 10 ? '0' : '') + month + '/' + (day < 10 ? '0' : '') + day;

        var AttendenceDate =output;

        $.ajax({
            type: "GET",
            url: '@Url.Action("ShowEmpDateTimeStatisitic", "Dashboard")',
            data: { AttendenceDate: AttendenceDate},
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                if (data != null) {

                    var TotalEmp = data[0]["TotalEmp"];
                    $("#lblTotalEmployee").text(TotalEmp);
                    $("#lblTotalOnTime").text(data[0]["TodayPresent"]);
                    $("#lblTotalLate").text(data[0]["TodayLate"]);
                    $("#lblTotalAbsent").text(data[0]["TodayAbsent"]);
                }
            },
            error: function (response) {
                var message = $("#message");
                message.css("color", "red");
                message.html("error");
            }
        });
    }


