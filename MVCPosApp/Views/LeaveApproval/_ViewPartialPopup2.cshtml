@model BusinessLogic.Repository.Model_HRM_LeaveApplicationEntry

<div>
    <div class="modal-content">
        <div class="modal-header" style="background-color: #bd4949;color: white;">
            <h5 class="modal-title" id="exampleModalLabel">Any Confirmation Remarks?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="form">
                <fieldset id="SubmitForm">
                    @Html.HiddenFor(model => model.LeaveAppEntryId, new { @id = "txtLeaveAppEntryId" })
                    @Html.HiddenFor(model => model.HRApprovalStatus, new { @id = "txtHRApprovalStatus" })
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.HRApprovalRemarks, new { @id = "txtHRApprovalRemarks", @style = "height: 120px;", @class = "form-control", @placeholder = "Approval Remarks" })
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" id="btnsubmit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnsubmit").click(function () {
            var datas = $("#SubmitForm").serialize();
            $.ajax({
                async: true,
                type: "POST",
                url: '@Url.Action("View_LeaveApproval", "LeaveApproval")',
                data: datas,
                success: function () {
                    $("#myModal").modal("hide");
                    window.location.href = "/LeaveApproval/View_LeaveApproval";
                     
                }
            })
        });
    })


</script>
