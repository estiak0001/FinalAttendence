<script>
        var popup, dataTable;
        $(document).ready(function () {
            dataTable = $('#tblDataList').DataTable({
                "ajax": {

                    "url": '@Url.Action("ShowEmployeInfo", "EmployeeOfficial")',

                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                { "data": "EmployeeID", "autowidth": true },
                { "data": "EmployeeName", "autowidth": true },
                { "data": "DepartmentCode", "autowidth": true },
                { "data": "DesignationCode", "autowidth": true },
                { "data": "ShiftCode", "autowidth": true },

                 {
                     "data": "EmployeeID", "render": function (data) {
                         return "<a class='btn btn-sm' href=@Url.Action("AddOrEditEmployee", "EmployeeOfficial")/" + data + "><i class='fa fa-edit' style='font-size: 18px;'></i></a><a class='btn btn-sm' style='margin-left:5px' onclick=Delete('" + data + "')><i class='fa fa fa-trash fa-lg'></i></a>"
                         //return "<a class='btn  btn-sm' style='margin-left:5px' onclick=Delete('" + data + "')><i class='fa fa-trash'></i></a>"
                     },
                     "orderable": false,
                     "searchable": false,
                     "width": "170px"
                 }
                ],
                "order": [[0, "Desc"]]
            });



        });






        function Delete(id) {
            if (confirm('Are you Sure to  Delete Data ?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Employee")/' + id,
                    success: function (data) {
                        if (data.success == true) {
                            dataTable.ajax.reload();
                            $('.ErrorMsg').text(data.message);
                        }
                        else {
                        }
                    }
                });

            };
        }




</script>
