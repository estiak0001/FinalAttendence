    const Toast = Swal.mixin({

        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 6000,

    });

    $(document).ready(function () {
        var rows_selected = [];
        LoadGrid(rows_selected);


        $("#txtCompanyName").keyup(function () {

            $("#message").html("");
        });

        $(document).ready(function () {

            $("input:text,form").attr("autocomplete", "off");
        });

        $(document).on("click", "#lnkID", function () {
            var CompanyCode = $(this).text();
            $.ajax({
                type: "GET",
                url: '@Url.Action("getSingleData", "Company")',
                data: { CompanyCode: CompanyCode },
                dataType: 'json',
                success: function (data) {
                    $('#txtCompanyCode').val(data.CompanyCode);
                    $('#txtCompanyName').val(data.CompanyName);
                    $('#txtCompanyShortName').val(data.CompanyShortName);
                    $('#txtAddress1').val(data.Address1);
                    $('#txtAddress2').val(data.Address2);
                    $('#txtPhone1').val(data.Phone1);
                    $('#txtPhone2').val(data.Phone2);
                    $('#txtFax').val(data.Fax);
                    $('#txtHotLine').val(data.HotLine);
                    $('#txtEmail').val(data.Email);
                    $('#txtURL').val(data.URL);
                }
            })
        });


        function Clear() {
            //Reading text box values using Jquery
            $('#txtCompanyName').val("");
            $('#txtCompanyShortName').val("");
            $('#txtAddress1').val("");
            $('#txtAddress2').val("");
            $('#txtPhone1').val("");
            $('#txtPhone2').val("");
            $('#txtFax').val("");
            $('#txtHotLine').val("");
            $('#txtEmail').val("");
            $('#txtURL').val("");
            $("#message").html("");
        }


        function MaxID() {
            $("#txtCompanyCode").val("");
            $.ajax({
                type: "POST",
                url: '@Url.Action("MaxID", "Company")',
                data: "",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {

                    var message = $("#message");
                    if (response) {
                        $("#txtCompanyCode").val(response);
                    }
                    else {
                        //Email not available.
                        message.css("color", "red");
                        message.html("Already Exists");
                    }
                }
            });
        }


        $('#btnSubmit, #btnSubmit2').click(function (event) {

            event.preventDefault();
            //This prevents the default action
            if ($("#txtCompanyName").val() == "") {
                Toast.fire({
                    heading: 'Success',
                    icon: 'error',
                    title: '  Company Name is Required',
                    width: 200,

                })
                return
            }


            $.ajax({

                async: true,
                type: "POST",
                url: '@Url.Action("View_Company", "Company")',
                data: { //Passing data
                    CompanyCode: $("#txtCompanyCode").val(), //Reading text box values using Jquery
                    CompanyName: $("#txtCompanyName").val(),
                    CompanyShortName: $("#txtCompanyShortName").val(),
                    Address1: $("#txtAddress1").val(),
                    Address2: $("#txtAddress2").val(),
                    Phone1: $("#txtPhone1").val(),
                    Phone2: $("#txtPhone2").val(),
                    Fax: $("#txtFax").val(),
                    HotLine: $("#txtHotLine").val(),
                    Email: $("#txtEmail").val(),
                    URL: $("#txtURL").val()
                },
                success: function (data) {

                    if (data.success == true) {
                        MaxID();
                        Clear();
                        LoadGrid(rows_selected);
                        Toast.fire({
                            icon: 'success',
                            title: data.message
                        })
                    }
                    else {
                        Toast.fire({
                            icon: 'error',
                            title: data.message
                        })
                    }
                }

            });

        });

        $('#btnClear').click(function (event) {
            event.preventDefault();
            MaxID();
            Clear();
        });
        $('#btnDelete').click(function (event) {
            if ($('tbody input[type="checkbox"]').is(":checked")) {
                if (confirm('Are you Sure to  Delete Data ?')) {
                    event.preventDefault();
                        DeleteMultiData();
                }
            } else {
                Toast.fire({
                    icon: 'error',
                    title: "No Data Checked for Delete",
                })
            }
        });

        function DeleteMultiData() {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteMultiData", "Company")',
                    data: { //Passing data
                        AllID: rows_selected,
                    },
                    success: function (data) {
                        if (data.success == true) {
                            MaxID();
                            Clear();
                            LoadGrid(rows_selected);

                            Toast.fire({
                                icon: 'success',
                                title: data.message,
                            })
                        }
                        else {
                            Toast.fire({
                                icon: 'error',
                                title: data.message,
                            })
                        }
                    }
                });
        }

        $('#tblDataList tbody').on('click', 'input[type="checkbox"]', function (e) {
            var $row = $(this).closest('tr');
            var data = $('#tblDataList').DataTable().row($row).data();
            var rowId = data["CompanyCode"];
            var ar = {};
            ar["CompanyCode"] = rowId;
            var index = rows_selected.findIndex(x => x.CompanyCode === rowId)
            if (this.checked && index === -1) {
                rows_selected.push(ar);
            } else if (!this.checked && index !== -1) {
                rows_selected.splice(index, 1);
            }
            if (this.checked) {
                $row.addClass('selected');
            } else {
                $row.removeClass('selected');
            }
            console.log(rows_selected);
            updateDataTableSelectAllCtrl();
            e.stopPropagation();
        });

        $('#tblDataList thead input[name="chkAll"]').on('click', function (e) {
            rows_selected = [];
            if (this.checked) {
                $('#tblDataList tbody input[type="checkbox"]:not(:checked)').trigger('click');
            } else {
                $('#tblDataList tbody input[type="checkbox"]:checked').trigger('click');
            }
            console.log(rows_selected);
            e.stopPropagation();
        });

    });

