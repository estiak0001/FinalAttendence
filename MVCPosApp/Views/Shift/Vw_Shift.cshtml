    const Toast = Swal.mixin({

        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 6000,
    });

    $(document).ready(function () {
        var rows_selected = [];
        LoadGrid(rows_selected);
        function MaxID() {
            $("#txtShiftCode").val("");
            $.ajax({
                type: "POST",
                url: '@Url.Action("MaxID", "Shift")',
                data: "",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    var message = $("#message");
                    if (response) {
                        $("#txtShiftCode").val(response);
                    }
                    else {
                        //Email not available.
                        message.css("color", "red");
                        message.html("Already Exists");
                    }
                }
            });
        }
        $('#btnSubmit').click(function (event) {
            event.preventDefault();
            //This prevents the default action
            if ($("#txtShiftName").val() == "") {
                Toast.fire({
                    icon: 'error',
                    title: '  Shift Name is Required',
                })
                return;
            }

            if ($("#txtShiftStartTime").val() == "") {
                Toast.fire({
                    icon: 'error',
                    title: 'Start Time is Required!'
                })
                return;
            }
            if ($("#txtShiftEndTime").val() == "") {
                Toast.fire({
                    icon: 'error',
                    title: 'End Time is Required!'
                })
                return;
            }
            if ($("#txtLateTime").val() == "") {
                Toast.fire({
                    icon: 'error',
                    title: 'Late Time is Required!'
                })
                return;
            }
            if ($("#txtAbsentTime").val() == "") {
                Toast.fire({
                    icon: 'error',
                    title: 'Absent Time is Required!'
                })
                return;
            }
            if ($("#txtWEFDate").val() == "") {
                Toast.fire({
                    icon: 'error',
                    title: 'WEF Time is Required!'
                })
                return;
            }
            $.ajax({
                async: true,
                type: "POST",
                url: '@Url.Action("Vw_Shift", "Shift")',
                data: { //Passing data
                    ShiftCode: $("#txtShiftCode").val(), //Reading text box values using Jquery
                    ShiftName: $("#txtShiftName").val(),
                    ShiftStartTime: $("#txtShiftStartTime").val(),
                    ShiftEndTime: $("#txtShiftEndTime").val(),
                    LateTime: $("#txtLateTime").val(),
                    AbsentTime: $("#txtAbsentTime").val(),
                    Remarks: $("#txtRemarks").val(),
                    WEF: $("#txtWEFDate").val()

                },
                success: function (data) {
                    if (data.success == true) {
                        MaxID();
                        Clear();
                        LoadGrid(rows_selected);
                        Toast.fire({
                            icon: 'success',
                            title: 'Data Save Successfully!'
                        })
                    }
                    else {

                        Toast.fire({
                            icon: 'error',
                            title: data.message,
                        })
                    }
                }

            });

        });

        $('#btnClear').click(function (event) {
            event.preventDefault();
            MaxID();
            Clear();
        });

        $('#txtWEFDate').datepicker({
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,
            yearRange: '2018:2040',
            maxDate: '87Y'
        });
        var d = new Date();
        var month = d.getMonth() + 1;
        var day = d.getDate();

        var output = (day < 10 ? '0' : '') + day + '/' +
            (month < 10 ? '0' : '') + month + '/' + d.getFullYear();
        $('#txtWEFDate').val(output);

        $('.timepicker').datetimepicker({
            format: 'hh:mm:ss A',
            stepping: 1,
            icons:
        {
            up: 'fa fa-angle-up',
            down: 'fa fa-angle-down'
        }
        });

        $("#txtShiftName").keyup(function () {

            $("#message").html("");
        });
        $("input:text,form").attr("autocomplete", "off");
        $(document).on("click", "#btnGridDelete", function () {
            var DeletedID = $(this).text();
            Delete(DeletedID);
        });

        $(document).on("click", "#lnkID", function () {
            var ShiftCode = $(this).text();
            $.ajax({
                type: "GET",
                url: '@Url.Action("getSingleData", "Shift")',
                data: { ShiftCode: ShiftCode },
                dataType: 'json',
                success: function (data) {
                    $('#txtShiftCode').val(data.ShiftCode);
                    $('#txtShiftName').val(data.ShiftName);
                    $('#txtShiftStartTime').val(data.ShiftStartTime);
                    $('#txtShiftEndTime').val(data.ShiftEndTime);
                    $('#txtLateTime').val(data.LateTime);
                    $('#txtAbsentTime').val(data.AbsentTime);
                    $('#txtRemarks').val(data.Remarks);
                    $('#txtWEFDate').val(data.WEF);
                }
            })
        });
        function Clear() {
            //Reading text box values using Jquery
            $('#txtShiftName').val("");
            $('#txtShiftStartTime').val("");
            $('#txtShiftEndTime').val("");
            $('#txtLateTime').val("");
            $('#txtAbsentTime').val("");
            $('#txtRemarks').val("");
            $("#message").html("");
        }

        $('#btnDelete').click(function (event) {
            if ($('tbody input[type="checkbox"]').is(":checked")) {
                if (confirm('Are you Sure to  Delete Data ?')) {
                    event.preventDefault();
                        DeleteMultiData();
                }
            } else {
                Toast.fire({
                    icon: 'error',
                    title: "No Data Checked for Delete",
                })
            }
        });

        function DeleteMultiData() {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteMultiData", "Shift")',
                    data: { //Passing data
                        AllID: rows_selected,
                    },
                    success: function (data) {
                        if (data.success == true) {
                            MaxID();
                            Clear();
                            LoadGrid(rows_selected);

                            Toast.fire({
                                icon: 'success',
                                title: data.message,
                            })
                        }
                        else {
                            Toast.fire({
                                icon: 'error',
                                title: data.message,
                            })
                        }
                    }
                });
        }

        $('#tblDataList tbody').on('click', 'input[type="checkbox"]', function (e) {
            var $row = $(this).closest('tr');
            var data = $('#tblDataList').DataTable().row($row).data();
            var rowId = data["ShiftCode"];
            var ar = {};
            ar["ShiftCode"] = rowId;
            var index = rows_selected.findIndex(x => x.ShiftCode === rowId)
            if (this.checked && index === -1) {
                rows_selected.push(ar);
            } else if (!this.checked && index !== -1) {
                rows_selected.splice(index, 1);
            }
            if (this.checked) {
                $row.addClass('selected');
            } else {
                $row.removeClass('selected');
            }
            console.log(rows_selected);
            updateDataTableSelectAllCtrl();
            e.stopPropagation();
        });

        $('#tblDataList thead input[name="chkAll"]').on('click', function (e) {
            rows_selected = [];
            if (this.checked) {
                $('#tblDataList tbody input[type="checkbox"]:not(:checked)').trigger('click');
            } else {
                $('#tblDataList tbody input[type="checkbox"]:checked').trigger('click');
            }
            console.log(rows_selected);
            e.stopPropagation();
        });

    });


