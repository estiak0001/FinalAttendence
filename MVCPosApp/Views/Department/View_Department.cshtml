        timer: 6000,
    });

    $(document).ready(function () {
        var rows_selected = [];
        LoadGrid(rows_selected);

        $("#txtDepartmentName").keyup(function () {

            $("#message").html("");
        });


            $("input:text,form").attr("autocomplete", "off");



        $(document).on("click", "#lnkID", function () {
            var DepartmentCode = $(this).text();
            $.ajax({
                type: "GET",
                url: '@Url.Action("getSingleData", "Department")',
                data: { DepartmentCode: DepartmentCode },
                dataType: 'json',
                success: function (data) {
                    $('#txtDepartmentCode').val(data.DepartmentCode);
                    $('#txtDepartmentName').val(data.DepartmentName);
                    $('#txtDepartmentShortName').val(data.DepartmentShortName);

                }
            })
        });

        function Clear() {
            //Reading text box values using Jquery
            $('#txtDepartmentName').val("");
            $('#txtDepartmentShortName').val("");

        }

        function MaxID() {
            $("#txtDepartmentCode").val("");
            $.ajax({
                type: "POST",
                url: '@Url.Action("MaxID", "Department")',
                data: "",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    var message = $("#message");
                    if (response) {
                        $("#txtDepartmentCode").val(response);
                    }
                    else {
                        //Email not available.
                        message.css("color", "red");
                        message.html("Already Exists");
                    }
                }
            });
        }


        $('#btnSubmit, #btnSubmit2').click(function (event) {
            event.preventDefault();
            //This prevents the default action
            if ($("#txtDepartmentName").val() == "") {
                Toast.fire({
                    icon: 'error',
                    title: '  Department Name is Required',
                })
                return;
            }

            $.ajax({
                async: true,
                type: "POST",
                url: '@Url.Action("View_Department", "Department")',
                data: { //Passing data
                    DepartmentCode: $("#txtDepartmentCode").val(), //Reading text box values using Jquery
                    DepartmentName: $("#txtDepartmentName").val(),
                    DepartmentShortName: $("#txtDepartmentShortName").val()
                },
                success: function (data) {
                    if (data.success == true) {
                        MaxID();
                        Clear();
                        LoadGrid(rows_selected);
                        Toast.fire({
                            icon: 'success',
                            title: 'Data Save Successfully!'
                        })
                    }
                    else {

                        Toast.fire({
                            icon: 'error',
                            title: data.message,
                        })
                    }
                }

            });

        });

        $('#btnClear').click(function (event) {
            event.preventDefault();
            MaxID();
            Clear();
            $("#message").html("");
        });

        $('#btnDelete').click(function (event) {
            if ($('tbody input[type="checkbox"]').is(":checked")) {
                if (confirm('Are you Sure to  Delete Data ?')) {
                    event.preventDefault();                    
                        DeleteMultiData();                                       
                }
            } else {
                Toast.fire({
                    icon: 'error',
                    title: "No Data Checked for Delete",
                })
            }
        });

        function DeleteMultiData() {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteMultiData", "Department")',
                    data: { //Passing data
                        AllID: rows_selected,
                    },
                    success: function (data) {
                        if (data.success == true) {
                            MaxID();
                            Clear();
                            LoadGrid(rows_selected);

                            Toast.fire({
                                icon: 'success',
                                title: data.message,
                            })
                        }
                        else {
                            Toast.fire({
                                icon: 'error',
                                title: data.message,
                            })
                        }
                    }
                });
        }

        $('#tblDataList tbody').on('click', 'input[type="checkbox"]', function (e) {
            var $row = $(this).closest('tr');
            var data = $('#tblDataList').DataTable().row($row).data();
            var rowId = data["DepartmentCode"];
            var ar = {};
            ar["DepartmentCode"] = rowId;
            var index = rows_selected.findIndex(x => x.DesignationCode === rowId)
            if (this.checked && index === -1) {
                rows_selected.push(ar);
            } else if (!this.checked && index !== -1) {
                rows_selected.splice(index, 1);
            }
            if (this.checked) {
                $row.addClass('selected');
            } else {
                $row.removeClass('selected');
            }
            console.log(rows_selected);
            updateDataTableSelectAllCtrl();
            e.stopPropagation();
        });

        $('#tblDataList thead input[name="chkAll"]').on('click', function (e) {
            rows_selected = [];
            if (this.checked) {
                $('#tblDataList tbody input[type="checkbox"]:not(:checked)').trigger('click');
            } else {
                $('#tblDataList tbody input[type="checkbox"]:checked').trigger('click');
            }
            console.log(rows_selected);
            e.stopPropagation();
        });



    });




